<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android1="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android1:layout_width="match_parent"
    android1:layout_height="wrap_content"
    app:cardElevation="8dp"
    android1:layout_margin="8dp">
    <LinearLayout
        android1:orientation="vertical"
        android1:layout_width="match_parent"
        android1:layout_height="match_parent">
        <LinearLayout
            android1:orientation="horizontal"
            android1:layout_width="match_parent"
            android1:layout_height="match_parent">

            <LinearLayout
                android1:orientation="vertical"
                android1:layout_width="match_parent"
                android1:layout_height="match_parent"
                android1:gravity="center_vertical"
                android1:layout_marginLeft="8dp">
                <TextView
                    android1:id="@+id/titre"
                    android1:textColor="@android:color/black"
                    android1:textStyle="bold"
                    android1:textSize="20sp"
                    android1:text="Titre"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"/>
                <TextView
                    android1:id="@+id/text"
                    android1:textColor="@android:color/black"
                    android1:textStyle="normal"
                    android1:textSize="16sp"
                    android1:text="User Id"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
